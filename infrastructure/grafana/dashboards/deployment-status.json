{
  "dashboard": {
    "title": "Deployment Status & Canary Monitoring",
    "tags": ["deployment", "canary", "cicd"],
    "timezone": "utc",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Active Canary Deployments",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "count(up{job=~\".*-canary\"})",
            "legendFormat": "Active Canaries"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 3, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Canary Error Rate",
        "type": "gauge",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=~\".*-canary\",code=~\"5..\"}[5m])) / sum(rate(http_requests_total{job=~\".*-canary\"}[5m])) * 100",
            "legendFormat": "Error Rate %"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 5,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.5, "color": "yellow"},
                {"value": 1.0, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Canary P95 Latency",
        "type": "gauge",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=~\".*-canary\"}[5m])) by (le)) * 1000",
            "legendFormat": "P95 Latency (ms)"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "min": 0,
            "max": 120000,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 30000, "color": "yellow"},
                {"value": 60000, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Deployment Status",
        "type": "table",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "up{job=~\"utxoiq-.*\"}",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true},
              "indexByName": {},
              "renameByName": {
                "job": "Service",
                "Value": "Status",
                "revision": "Revision"
              }
            }
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [{"displayName": "Service", "desc": false}]
        },
        "fieldConfig": {
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Status"},
              "properties": [
                {
                  "id": "custom.displayMode",
                  "value": "color-background"
                },
                {
                  "id": "mappings",
                  "value": [
                    {"type": "value", "value": "1", "text": "UP", "color": "green"},
                    {"type": "value", "value": "0", "text": "DOWN", "color": "red"}
                  ]
                }
              ]
            }
          ]
        }
      },
      {
        "id": 5,
        "title": "Canary Traffic Split",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=~\".*-canary\"}[5m])) by (job)",
            "legendFormat": "{{job}} (canary)"
          },
          {
            "expr": "sum(rate(http_requests_total{job=~\"utxoiq-.*\",job!~\".*-canary\"}[5m])) by (job)",
            "legendFormat": "{{job}} (stable)"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["lastNotNull", "mean"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Error Rate Comparison (Canary vs Stable)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=~\".*-canary\",code=~\"5..\"}[5m])) / sum(rate(http_requests_total{job=~\".*-canary\"}[5m])) * 100",
            "legendFormat": "Canary Error Rate"
          },
          {
            "expr": "sum(rate(http_requests_total{job=~\"utxoiq-.*\",job!~\".*-canary\",code=~\"5..\"}[5m])) / sum(rate(http_requests_total{job=~\"utxoiq-.*\",job!~\".*-canary\"}[5m])) * 100",
            "legendFormat": "Stable Error Rate"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["lastNotNull", "mean", "max"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.5, "color": "yellow"},
                {"value": 1.0, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Latency Comparison (Canary vs Stable)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=~\".*-canary\"}[5m])) by (le)) * 1000",
            "legendFormat": "Canary P95"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=~\"utxoiq-.*\",job!~\".*-canary\"}[5m])) by (le)) * 1000",
            "legendFormat": "Stable P95"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{job=~\".*-canary\"}[5m])) by (le)) * 1000",
            "legendFormat": "Canary P99"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{job=~\"utxoiq-.*\",job!~\".*-canary\"}[5m])) by (le)) * 1000",
            "legendFormat": "Stable P99"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["lastNotNull", "mean", "max"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 30000, "color": "yellow"},
                {"value": 60000, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Recent Deployments",
        "type": "logs",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "{job=\"deployment-logs\"} |= \"deployment\" | json",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": false,
          "showCommonLabels": false,
          "wrapLogMessage": true,
          "sortOrder": "Descending"
        }
      },
      {
        "id": 9,
        "title": "Rollback Events",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "sum(increase(deployment_rollback_total[24h]))",
            "legendFormat": "Rollbacks (24h)"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 3, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "title": "Successful Deployments",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 20},
        "targets": [
          {
            "expr": "sum(increase(deployment_success_total[24h]))",
            "legendFormat": "Successful (24h)"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 11,
        "title": "Deployment Success Rate",
        "type": "gauge",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "sum(increase(deployment_success_total[24h])) / (sum(increase(deployment_success_total[24h])) + sum(increase(deployment_rollback_total[24h]))) * 100",
            "legendFormat": "Success Rate %"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 80, "color": "yellow"},
                {"value": 95, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 12,
        "title": "Average Canary Duration",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 20},
        "targets": [
          {
            "expr": "avg(deployment_canary_duration_seconds) / 60",
            "legendFormat": "Avg Duration (min)"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "m",
            "decimals": 1
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "query": "label_values(up{job=~\"utxoiq-.*\"}, job)",
          "multi": true,
          "includeAll": true,
          "allValue": ".*"
        },
        {
          "name": "environment",
          "type": "custom",
          "query": "production,staging,development",
          "current": {
            "text": "production",
            "value": "production"
          }
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "expr": "deployment_started_timestamp",
          "tagKeys": "service,revision",
          "textFormat": "Deployment: {{service}} ({{revision}})",
          "iconColor": "blue"
        },
        {
          "name": "Rollbacks",
          "datasource": "Prometheus",
          "expr": "deployment_rollback_timestamp",
          "tagKeys": "service,reason",
          "textFormat": "Rollback: {{service}} - {{reason}}",
          "iconColor": "red"
        }
      ]
    }
  }
}
