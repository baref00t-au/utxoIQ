# GCP Configuration
GCP_PROJECT_ID=your-project-id
BIGQUERY_DATASET_BTC=btc
BIGQUERY_DATASET_INTEL=intel
PUBSUB_TOPIC_SIGNALS=signal-generated
PUBSUB_SUBSCRIPTION_BLOCKS=block-processed

# Bitcoin Core RPC Configuration (Tor Hidden Service)
# Leave empty to run in API-only mode (no automatic block monitoring)
BITCOIN_RPC_URL=http://umbrel:your-password@your-onion-address.onion:8332

# mempool.space API for fallback (no authentication required)
MEMPOOL_API_URL=https://mempool.space/api

# Block monitoring configuration
POLL_INTERVAL=30

# Global Signal Processing Configuration
CONFIDENCE_THRESHOLD=0.7
REORG_DETECTION_DEPTH=6

# Signal Processor Toggles
# Set to "true" or "false" to enable/disable each processor
MEMPOOL_PROCESSOR_ENABLED=true
EXCHANGE_PROCESSOR_ENABLED=true
MINER_PROCESSOR_ENABLED=true
WHALE_PROCESSOR_ENABLED=true
TREASURY_PROCESSOR_ENABLED=true
PREDICTIVE_PROCESSOR_ENABLED=true

# Processor-Specific Confidence Thresholds
# Override global threshold for specific processors (optional)
# MEMPOOL_CONFIDENCE_THRESHOLD=0.7
# EXCHANGE_CONFIDENCE_THRESHOLD=0.7
# MINER_CONFIDENCE_THRESHOLD=0.7
# WHALE_CONFIDENCE_THRESHOLD=0.7
# TREASURY_CONFIDENCE_THRESHOLD=0.7
# PREDICTIVE_CONFIDENCE_THRESHOLD=0.5

# Processor Time Windows
# Time windows for historical comparisons (1h, 24h, 7d, etc.)
MEMPOOL_TIME_WINDOW=1h
EXCHANGE_TIME_WINDOW=24h
MINER_TIME_WINDOW=7d
WHALE_TIME_WINDOW=24h
TREASURY_TIME_WINDOW=24h
PREDICTIVE_TIME_WINDOW=24h

# Processor-Specific Thresholds
MEMPOOL_SPIKE_THRESHOLD=1.2
WHALE_THRESHOLD_BTC=1000
PREDICTIVE_MIN_CONFIDENCE=0.5
