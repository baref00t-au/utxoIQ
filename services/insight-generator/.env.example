# Google Cloud Configuration
GCP_PROJECT_ID=your-project-id
GCP_LOCATION=us-central1

# BigQuery Configuration
BIGQUERY_DATASET_INTEL=intel
BIGQUERY_DATASET_BTC=btc

# Service Configuration
SERVICE_NAME=insight-generator
LOG_LEVEL=INFO
PORT=8080

# Polling Configuration
POLL_INTERVAL_SECONDS=10
CONFIDENCE_THRESHOLD=0.7

# BigQuery Dataset Names
DATASET_INTEL=intel
DATASET_BTC=btc

# Model Configuration
HEADLINE_MAX_LENGTH=280
MODEL_VERSION=1.0.0

# Cost Tracking
ENABLE_COST_TRACKING=true

# AI Provider Configuration
# Choose one: vertex_ai, openai, anthropic, grok
AI_PROVIDER=vertex_ai

# Vertex AI Configuration (if AI_PROVIDER=vertex_ai)
VERTEX_AI_PROJECT=your-project-id
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL=gemini-pro

# OpenAI Configuration (if AI_PROVIDER=openai)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo

# Anthropic Configuration (if AI_PROVIDER=anthropic)
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-3-opus-20240229

# xAI Grok Configuration (if AI_PROVIDER=grok)
GROK_API_KEY=xai-...
GROK_MODEL=grok-beta
GROK_API_BASE=https://api.x.ai/v1
